{
  "manifest_version": 3,
  "name": "MyTTV",
  "version": "0.2.4",
  "description": "Ajoute une liste de cha√Ænes Twitch favorites dans la sidebar.",
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/vod-sub/src/app.js",
        "scripts/vod-sub/src/firefox/app.js",
        "scripts/vod-sub/src/firefox/twitchnosub.js"
      ],
      "matches": ["https://*.twitch.tv/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": [
        "scripts/vod-sub/src/restriction-remover.js",
        "scripts/vod-sub/src/twitchnosub.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": [
        "scripts/i18n.js",
        "scripts/fav/utils.js",
        "scripts/styles.js",
        "scripts/fav/favorites.js",
        "scripts/fav/sidebar.js",
        "scripts/fav/button.js",
        "scripts/settings.js",
        "scripts/svg.js",
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://static.twitchcdn.net/assets/*"
  ],
  "icons": {
    "48": "./assets/icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "myttv@heetme.com",
      "strict_min_version": "109.0"
    }
  }
}
