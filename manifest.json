{
  "manifest_version": 3,
  "name": "MyTTV",
  "version": "1.0",
  "description": "Ajoute une liste de cha√Ænes Twitch favorites dans la sidebar.",
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/vod-sub/src/app.js",
        "scripts/vod-sub/src/chrome/app.js"
      ],
      "matches": ["https://*.twitch.tv/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": [
        "scripts/vod-sub/src/twitchnosub.js",
        "scripts/fav/utils.js",
        "scripts/fav/styles.js",
        "scripts/fav/favorites.js",
        "scripts/fav/sidebar.js",
        "scripts/fav/button.js",
        "scripts/fav/settings.js",
        "scripts/fav/svg.js",
        "content.js",
        "scripts/vod-sub/src/restriction-remover.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://static.twitchcdn.net/assets/*"
  ],
  "icons": {
    "48": "./assets/icons/icon.png"
  }
}
